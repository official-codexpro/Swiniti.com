<script>
const hero = document.querySelector(".hero");

const images = [
  "/static/v2/images/larm-rmah-AEaTUnvneik-unsplash.jpg",
  "/static/v2/images/glimpse.JPG",
  "/static/v2/images/4A8B3991.JPG",
  "/static/v2/images/aadhaar.jpg",
  "/static/v2/images/IMG_5755.jpeg"
];

let index = 0;

// --- CREATE TWO SLIDE LAYERS ---
const slide1 = document.createElement("div");
const slide2 = document.createElement("div");

[slide1, slide2].forEach(slide => {
  slide.style.position = "absolute";
  slide.style.inset = "0";
  slide.style.backgroundSize = "cover";
  slide.style.backgroundPosition = "center";
  slide.style.transition = "transform 1.2s ease-in-out";
  slide.style.zIndex = "-1";
  hero.appendChild(slide);
});

// first image
slide1.style.backgroundImage = `url('${images[0]}')`;
slide1.style.transform = "translateX(0%)";
slide2.style.transform = "translateX(100%)"; // off-screen right

function changeSlide() {
  // next image
  index = (index + 1) % images.length;
  slide2.style.backgroundImage = `url('${images[index]}')`;

  // slide both layers LEFT → RIGHT smoothly
  slide1.style.transform = "translateX(-100%)";
  slide2.style.transform = "translateX(0%)";

  // reset layers after animation
  setTimeout(() => {
    // slide1 becomes new base
    slide1.style.backgroundImage = slide2.style.backgroundImage;

    // reset positions for next slide
    slide1.style.transform = "translateX(0%)";
    slide2.style.transform = "translateX(100%)";
  }, 1200);
}

setInterval(changeSlide, 4500);
</script>


